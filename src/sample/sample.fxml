<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Height" />
            <Label text="Length" GridPane.columnIndex="1" />
            <Label text="Width" GridPane.columnIndex="2" />
            <Label text="Weight" GridPane.columnIndex="3" />
             <Button mnemonicParsing="false" text="Calculate" GridPane.columnIndex="4" fx:id="ButtonCalculate"/>
            <TextField promptText="Height" GridPane.rowIndex="1" fx:id="FieldHeight"/>
            <TextField promptText="Length" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="FieldLength" />
            <TextField promptText="Width" GridPane.columnIndex="2" GridPane.rowIndex="1" fx:id="FieldWidth"/>
            <TextField promptText="Weight" GridPane.columnIndex="3" GridPane.rowIndex="1" fx:id="FieldWeight"/>
             <Label text="Result" GridPane.columnIndex="4" GridPane.rowIndex="1" fx:id="LabelResult"/>
         </children>
      </GridPane>
   </children>
</GridPane>
