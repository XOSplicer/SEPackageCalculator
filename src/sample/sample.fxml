<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Height [cm]" />
            <Label text="Length [cm]" GridPane.columnIndex="1" />
            <Label text="Width [cm]" GridPane.columnIndex="2" />
            <Label text="Weight [kg]" GridPane.columnIndex="3" />
             <Button fx:id="ButtonCalculate" mnemonicParsing="false" text="Calculate" GridPane.columnIndex="4" />
            <TextField fx:id="FieldHeight" promptText="Height" GridPane.rowIndex="1" />
            <TextField fx:id="FieldLength" promptText="Length" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="FieldWidth" promptText="Width" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField fx:id="FieldWeight" promptText="Weight" GridPane.columnIndex="3" GridPane.rowIndex="1" />
             <Label fx:id="LabelResult" text="Result" GridPane.columnIndex="4" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </children>
</GridPane>
